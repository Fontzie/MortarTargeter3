<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvFieldInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Mode:\nSelect a target on the map to generate its Plus Code."
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnSelectTargetOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Target on Map" />

    <TextView
        android:id="@+id/tvPlusCodeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus Code"
        android:textSize="50sp"
        android:layout_marginTop="32dp"/>

    <!-- Optionally, add a button to copy or further process the code -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginTop="24dp"/>
</LinearLayout>
